{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"moduleResolution": "bundler",
		"noImplicitAny": true,
		"strict": true,
		"plugins": [
			{
				"name": "ts-lit-plugin",
				"strict": true
			}
		]
	},
	"include": ["src/**/*.js", "src/**/*.ts"]
}
